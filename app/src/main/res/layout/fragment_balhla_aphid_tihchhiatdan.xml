                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize"
                android:layout_margin="@dimen/natnaLanDanLehEnkawlDanMargin"
                android:text="@string/b6b1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize"
                android:layout_margin="@dimen/natnaLanDanLehEnkawlDanMargin"
                android:text="@string/b6b2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize"
                android:layout_margin="@dimen/natnaLanDanLehEnkawlDanMargin"
                android:text="@string/b6b3"/>


        </LinearLayout>
    </ScrollView>


</LinearLayout>